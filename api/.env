# SERVER CONFIGURATION
NODE_ENV=development
PORT=3000
API_VERSION=v1

# DATABASE CONFIGURATION
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/sun-power-services-erp

# Database Options
DB_MAX_POOL_SIZE=10
DB_CONNECT_TIMEOUT=30000

# JWT AUTHENTICATION
JWT_SECRET=super_secrect_key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# SECURITY & ENCRYPTION
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# EMAIL CONFIGURATION (SMTP)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_ADDRESS=noreply@sunpowerservices.com
EMAIL_FROM_NAME=Sun Power Services

# SMS CONFIGURATION (Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WHATSAPP CONFIGURATION
WHATSAPP_ENABLED=false
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# FILE UPLOAD & STORAGE
# Local file storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# AWS S3 Configuration (optional)
AWS_ENABLED=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sun-power-services-uploads

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# LOGGING CONFIGURATION
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# BUSINESS CONFIGURATION
COMPANY_NAME=Sun Power Services
COMPANY_EMAIL=info@sunpowerservices.com
COMPANY_PHONE=+91-1234567890
COMPANY_ADDRESS=123 Business Street, City, State, Country
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# SLA CONFIGURATION (in hours)
SLA_DEFAULT_RESPONSE_TIME=24
SLA_DEFAULT_RESOLUTION_TIME=72
SLA_LOW_PRIORITY_RESPONSE=48
SLA_LOW_PRIORITY_RESOLUTION=168
SLA_MEDIUM_PRIORITY_RESPONSE=24
SLA_MEDIUM_PRIORITY_RESOLUTION=72
SLA_HIGH_PRIORITY_RESPONSE=8
SLA_HIGH_PRIORITY_RESOLUTION=24
SLA_CRITICAL_PRIORITY_RESPONSE=2
SLA_CRITICAL_PRIORITY_RESOLUTION=8

# INVENTORY CONFIGURATION
DEFAULT_LOW_STOCK_THRESHOLD=10
ENABLE_SERIAL_TRACKING=true
ENABLE_BATCH_TRACKING=false
AUTO_GENERATE_PRODUCT_CODES=true

# NOTIFICATION PREFERENCES
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_WHATSAPP_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true

# REPORT GENERATION

REPORT_TEMP_DIR=temp/reports
REPORT_RETENTION_DAYS=30
ENABLE_REPORT_CACHING=true
REPORT_CACHE_TTL=3600

# BACKUP CONFIGURATION
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# EXTERNAL INTEGRATIONS
# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Gateway (if needed)
PAYMENT_GATEWAY_ENABLED=false
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# DEVELOPMENT SETTINGS
# Set to true to enable detailed error messages in development
DEBUG=true
ENABLE_API_DOCS=true
ENABLE_CORS_DETAILED_LOGS=false

# SESSION CONFIGURATION
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# CRON JOB SETTINGS
ENABLE_CRON_JOBS=true
AMC_REMINDER_CRON=0 9 * * *
LOW_STOCK_ALERT_CRON=0 10 * * *
REPORT_GENERATION_CRON=0 6 * * 1

# ADMIN SETTINGS
SUPER_ADMIN_EMAIL=admin@sunpowerservices.com
SUPER_ADMIN_PASSWORD=admin123
SUPER_ADMIN_FIRST_NAME=Super
SUPER_ADMIN_LAST_NAME=Admin

# PERFORMANCE SETTINGS
REQUEST_TIMEOUT=30000
DB_QUERY_TIMEOUT=15000
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=100