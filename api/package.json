{
  "name": "sun-power-services-erp-api",
  "version": "1.0.0",
  "description": "Sun Power Services ERP Backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup": "ts-node src/scripts/setup.ts",
    "seed": "ts-node --transpile-only src/scripts/seed.ts",
    "seed:fix-stock-only": "ts-node --transpile-only src/scripts/seed.ts --fix-stock-only",
    "fix-stock": "ts-node --transpile-only src/scripts/fix-stock-available-quantity.ts",
    "fix-stockledger-indexes": "ts-node --transpile-only src/scripts/fix-stockledger-indexes.ts",
    "update-admin-access": "ts-node --transpile-only src/scripts/update-admin-access.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "sharp": "^0.33.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "erp",
    "typescript",
    "express",
    "mongodb",
    "nodejs"
  ],
  "author": "Sun Power Services",
  "license": "MIT"
}
