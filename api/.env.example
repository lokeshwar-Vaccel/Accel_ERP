# SERVER CONFIGURATION
NODE_ENV=development
PORT=3000
API_VERSION=v1

# DATABASE CONFIGURATION
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/sun-power-services-erp

# JWT AUTHENTICATION
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# SECURITY & ENCRYPTION
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# EMAIL CONFIGURATION (SMTP)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_ADDRESS=noreply@sunpowerservices.com
EMAIL_FROM_NAME=Sun Power Services

# SMS CONFIGURATION (Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WHATSAPP CONFIGURATION
WHATSAPP_ENABLED=false
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token

# ADMIN SETTINGS
SUPER_ADMIN_EMAIL=admin@sunpowerservices.com
SUPER_ADMIN_PASSWORD=change-this-password
SUPER_ADMIN_FIRST_NAME=Super
SUPER_ADMIN_LAST_NAME=Admin

# Add your actual values to .env file (copy this file to .env and update values)
